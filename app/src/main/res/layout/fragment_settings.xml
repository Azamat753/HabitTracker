<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor"
    android:orientation="vertical"
    android:padding="12dp"
    tools:context="com.lawlett.habittracker.fragment.settings.SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/signBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_background"
            android:fontFamily="@font/inter_medium"
            android:paddingStart="12dp"
            android:text="@string/btn_register"
            android:textAlignment="textStart"
            android:textColor="?attr/textColor" />

        <Button
            android:id="@+id/shareBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/rectangle_background"
            android:fontFamily="@font/inter_medium"
            android:paddingStart="12dp"
            android:text="@string/btn_share"
            android:textAlignment="textStart"
            android:textColor="?attr/textColor" />

        <Button
            android:id="@+id/change_lang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/rectangle_background"
            android:fontFamily="@font/inter_medium"
            android:paddingStart="12dp"
            android:text="@string/change_language"
            android:textAlignment="textStart"
            android:textColor="?attr/textColor" />

        <Button
            android:id="@+id/change_theme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/rectangle_background"
            android:fontFamily="@font/inter_medium"
            android:paddingStart="12dp"
            android:text="@string/btn_change_the_subject"
            android:textAlignment="textStart"
            android:textColor="?attr/textColor" />

        <Button
            android:id="@+id/showQrBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/rectangle_background"
            android:fontFamily="@font/inter_medium"
            android:paddingStart="12dp"
            android:text="@string/my_code"
            android:textAlignment="textStart"
            android:textColor="?attr/textColor" />

        <Button
            android:id="@+id/syncBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/rectangle_background"
            android:fontFamily="@font/inter_medium"
            android:paddingStart="12dp"
            android:text="@string/sync"
            android:visibility="gone"
            android:textAlignment="textStart"
            android:textColor="?attr/textColor" />

        <Button
            android:id="@+id/exitBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/rectangle_background"
            android:fontFamily="@font/inter_medium"
            android:paddingStart="12dp"
            android:text="@string/exit_account"
            android:textAlignment="textStart"
            android:textColor="?attr/textColor" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:indeterminateTint="@color/blue"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>