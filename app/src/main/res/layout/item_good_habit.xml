<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="14dp"
    app:cardElevation="8dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground"
        tools:ignore="UnusedAttribute">

        <androidx.core.widget.ContentLoadingProgressBar
            android:id="@+id/habit_progress"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="12dp"
            android:progress="70"
            android:progressDrawable="@drawable/circle_progress"
            app:layout_constraintBottom_toBottomOf="@id/cardsLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/habit_title"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textAlignment="textStart"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/inter_medium"
            android:textColor="?attr/iconColor"
            android:layout_marginStart="50dp"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@id/cardsLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/habit_progress"
            app:layout_constraintTop_toTopOf="@id/habit_progress"
            tools:text="habit" />


        <TextView
            android:id="@+id/habit_count"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle_background_no_top"
            android:gravity="center"
            android:padding="5dp"
            android:textAlignment="center"
            android:textColor="?attr/textColor"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/habit_progress"
            tools:text="10/10" />

        <TextView
            android:id="@+id/habit_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:text="$"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@id/habit_progress"
            app:layout_constraintEnd_toEndOf="@id/habit_progress"
            app:layout_constraintStart_toStartOf="@id/habit_progress"
            app:layout_constraintTop_toTopOf="@id/habit_progress" />

        <LinearLayout
            android:id="@+id/cardsLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@id/habit_progress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/habit_title">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Последняя отметка" />

            <TextView
                android:id="@+id/lastDateTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08.10.23 14:12:43"
                android:textColor="?attr/iconColor"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>