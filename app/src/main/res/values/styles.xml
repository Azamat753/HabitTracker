<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>"
        <item name="colorAccent">?attr/textColor</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="textColor">@color/white</item>
        <item name="iconColor">@color/blue</item>
        <item name="android:statusBarColor">@color/blue</item>
        <item name="backgroundColor">@color/white</item>
    </style>

    <style name="AppTheme.Heavenly" parent="AppTheme.NoActionBar">
        <item name="backgroundColor">@color/white</item>
        <item name="android:statusBarColor">@color/heavenly</item>
        <item name="textColor">@color/white</item>
        <item name="iconColor">@color/heavenly</item>
    </style>

    <style name="AppTheme.Green" parent="AppTheme.NoActionBar">
        <item name="backgroundColor">#FFFFFF</item>
        <item name="android:statusBarColor">@color/green</item>
        <item name="textColor">@color/white</item>
        <item name="iconColor">@color/green</item>
    </style>

    <style name="AppTheme.Pink" parent="AppTheme.NoActionBar">
        <item name="textColor">@color/white</item>
        <item name="iconColor">@color/pink</item>
        <item name="android:statusBarColor">@color/pink</item>
        <item name="backgroundColor">@color/white</item>
    </style>

    <style name="AppTheme.Dark" parent="AppTheme.NoActionBar">
        <item name="textColor">@color/white</item>
        <item name="iconColor">@color/blue</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="backgroundColor">@color/dark</item>
    </style>

    <style name="AppTheme.Bilberry" parent="AppTheme.NoActionBar">
        <item name="textColor">@color/white</item>
        <item name="iconColor">@color/bilberry</item>
        <item name="android:statusBarColor">@color/bilberry</item>
        <item name="backgroundColor">@color/white</item>
    </style>

    <style name="AppTheme.NewColor" parent="AppTheme.NoActionBar">
        <item name="textColor">@color/white</item>
        <item name="iconColor">@color/star</item>
        <item name="android:statusBarColor">@color/star</item>
        <item name="backgroundColor">@color/white</item>
    </style>

    <style name="AppTheme.NewColor2" parent="AppTheme.NoActionBar">
        <item name="textColor">@color/white</item>
        <item name="iconColor">@color/blue_gray</item>
        <item name="android:statusBarColor">@color/blue_gray</item>
        <item name="backgroundColor">@color/white</item>
    </style>

</resources>
